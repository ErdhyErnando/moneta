{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "tsx watch src/index.ts",
    "start": "test -f dist/index.js && node dist/index.js || node dist/index.mjs"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@moneta/auth": "workspace:*",
    "@moneta/db": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@moneta/config": "workspace:*",
    "@types/node": "^22.13.11",
    "tsdown": "^0.16.5",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  }
}
